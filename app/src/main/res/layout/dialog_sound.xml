<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/dp_15"
        app:cardElevation="0px"
        tools:context=".ui.dialog.SoundDialog">
        <LinearLayout
            android:layout_gravity="center"
            android:padding="@dimen/dp_16"
            android:background="@drawable/bg_gradient_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTitle"

                android:background="@drawable/top_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/great_vibes_regular"
                android:paddingVertical="@dimen/dp_4"
                android:paddingHorizontal="@dimen/dp_32"
                android:gravity="center"
                android:text="@string/config_sound"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_30"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/bg_button_gradient_disco"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_16">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_weight="1"
                    android:fontFamily="@font/great_vibes_regular"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="@string/sound"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/btnSound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:kswThumbHeight="@dimen/dp_32"
                    app:kswThumbWidth="@dimen/dp_32"
                    app:kswTintColor="#FFC107" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@drawable/bg_button_gradient_disco"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_16">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_weight="1"
                    android:fontFamily="@font/great_vibes_regular"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="@string/music_background"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/btnMusic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:kswThumbHeight="@dimen/dp_32"
                    app:kswThumbWidth="@dimen/dp_32"
                    app:kswTintColor="#FFC107" />
            </LinearLayout>

            <vn.xdeuhug.movieXD.widget.AppButton
                android:id="@+id/btnSave"
                android:layout_width="@dimen/dp_160"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_32"
                android:background="@drawable/button_rounded_rectangle"
                android:fontFamily="@font/great_vibes_regular"
                android:text="@string/quit"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>