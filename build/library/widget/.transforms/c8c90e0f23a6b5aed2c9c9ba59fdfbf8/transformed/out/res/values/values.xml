<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomViewStub">
        
        <attr name="android:layout"/>
    </declare-styleable>
    <declare-styleable name="DrawableTextView">
        
        <attr format="dimension" name="drawableWidth"/>
        
        <attr format="dimension" name="drawableHeight"/>
    </declare-styleable>
    <declare-styleable name="PlayButton">
        
        <attr format="color" name="pb_lineColor"/>
        
        <attr format="integer" name="pb_lineSize"/>
        
        <attr format="integer" name="pb_animDuration"/>
    </declare-styleable>
    <declare-styleable name="RatioFrameLayout">
        
        <attr format="string" name="sizeRatio"/>
    </declare-styleable>
    <declare-styleable name="RegexEditText">
        
        <attr format="string" name="inputRegex"/>
        
        <attr name="regexType">
            <!-- 手机号（只能以 1 开头）-->
            <enum name="mobile" value="0x01"/>
            <!-- 中文（普通的中文字符）-->
            <enum name="chinese" value="0x02"/>
            <!-- 英文（大写和小写的英文）-->
            <enum name="english" value="0x03"/>
            <!-- 数字（只允许输入纯数字）-->
            <enum name="number" value="0x04"/>
            <!-- 整数（非 0 开头的数字）-->
            <enum name="count" value="0x05"/>
            <!-- 用户名（中文、英文、数字）-->
            <enum name="name" value="0x06"/>
            <!-- 非空格字符 -->
            <enum name="nonnull" value="0x07"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="ScaleImageView">
        
        <attr format="float" name="scaleRatio"/>
    </declare-styleable>
    <declare-styleable name="SettingBar">
        
        <attr format="string" name="bar_leftText"/>
        <attr format="color" name="bar_leftTextColor"/>
        <attr format="dimension" name="bar_leftTextSize"/>
        <attr format="string" name="bar_leftTextHint"/>
        <attr format="reference" name="bar_leftDrawable"/>
        <attr format="dimension" name="bar_leftDrawablePadding"/>
        <attr format="dimension" name="bar_leftDrawableSize"/>
        <attr format="color" name="bar_leftDrawableTint"/>
        
        <attr format="string" name="bar_rightText"/>
        <attr format="color" name="bar_rightTextColor"/>
        <attr format="dimension" name="bar_rightTextSize"/>
        <attr format="string" name="bar_rightTextHint"/>
        <attr format="reference" name="bar_rightDrawable"/>
        <attr format="dimension" name="bar_rightDrawablePadding"/>
        <attr format="dimension" name="bar_rightDrawableSize"/>
        <attr format="color" name="bar_rightDrawableTint"/>
        
        <attr format="boolean" name="bar_lineVisible"/>
        <attr format="reference|color" name="bar_lineDrawable"/>
        <attr format="dimension" name="bar_lineSize"/>
        <attr format="dimension" name="bar_lineMargin"/>
    </declare-styleable>
    <declare-styleable name="SimpleRatingBar">
        
        <attr format="float" name="grade"/>
        
        <attr format="integer" name="gradeCount"/>
        
        <attr format="dimension" name="gradeWidth"/>
        
        <attr format="dimension" name="gradeHeight"/>
        
        <attr format="dimension" name="gradeSpace"/>
        
        <attr format="enum" name="gradeStep">
            <!-- 半颗星 -->
            <enum name="half" value="0x00"/>
            <!-- 一颗星 -->
            <enum name="one" value="0x01"/>
        </attr>
        
        <attr format="reference" name="normalDrawable"/>
        
        <attr format="reference" name="halfDrawable"/>
        
        <attr format="reference" name="fillDrawable"/>
    </declare-styleable>
    <declare-styleable name="SlantedTextView">
        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="android:textColor"/>
        <attr name="android:textStyle"/>
        <attr name="android:gravity"/>
        <attr name="android:colorBackground"/>
        <attr name="android:paddingVertical"/>
        <attr name="android:paddingHorizontal"/>
        
        <attr format="boolean" name="triangle"/>
    </declare-styleable>
    <declare-styleable name="SubmitButton">
        
        <attr format="color" name="progressColor"/>
        
        <attr format="color" name="succeedColor"/>
        
        <attr format="color" name="errorColor"/>
        
        <attr format="enum" name="progressStyle">
            <!-- 无进度 -->
            <enum name="loading" value="0x00"/>
            <!-- 带进度 -->
            <enum name="progress" value="0x01"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="SwitchButton">
        
        <attr name="android:checked"/>
        
        <attr name="android:enabled"/>
    </declare-styleable>
</resources>